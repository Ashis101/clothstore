<!DOCTYPE html>
<html lang="en">
<%- include('../layout/head.ejs') %>
</head>
<body>
    <%- include('../layout/navbar.ejs') %>
    <div class="container" style="width: 50rem;">
        <form action="/edit/<%= editdata.id %>" method="post" >
            <div class="form-group">
                <label for=""> Image</label>
                <input type="text" class="form-control" name="image" value="<%= editdata.image %>">
            </div>
            <div class="form-group">
                <label for=""> Title</label>
                <input type="text" class="form-control" name="title" value="<%= editdata.title %>"> 
            </div>
            <div class="form-group">
                    <label for=""> price</label>
                    <input type="text" class="form-control" name="price" value="<%= editdata.price %>"> 
            </div>
            <div class="form-group">
                    <label for=""> Details</label>
                    <input name="details" style='height: 30rem;'  class="form-control" cols="30" rows="10" value="<%= editdata.description %>">
            </div>
            <input type="hidden" name="userid" value="<%= editdata.id %>">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
   </div>

</body>
</html>